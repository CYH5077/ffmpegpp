{
    "tasks": [
        {
            "label": "CMake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "${workspaceRoot}",
                
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Make build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j10",
            ],
            "options":{
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn":["CMake build"]
        },
        {
            "label": "Make install",
            "type": "shell",
            "command": "make",
            "args": [
                "install",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": ["Make build"],
        },
        {
            "label": "Project build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Make install"]
        }
    ],
    "version": "2.0.0"
}